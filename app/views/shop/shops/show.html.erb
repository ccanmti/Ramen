<div class = "container">
  <div class = "row">
    <div class = "col-12">
      <h2>マイショップ情報</h2>
    </div>
    <div class = "col-5">
      <%= image_tag @shop.image,size: "400x400" %>
    </div>
    <div class = "col-6">
      <table class = "table">
          <tr>
            <th>店舗名</th>
            <th><%= @shop.name %></th>
          </tr>
          <tr>
            <th>メールアドレス</th>
            <th><%= @shop.email %></th>
          </tr>
            <th>郵便番号</th>
            <th><%= @shop.postal_code %></th>
          <tr>
            <th>住所</th>
            <th><%= @shop.address %></th>
          </tr>
          <tr>
            <th>電話番号</th>
            <th><%= @shop.telephone_number %></th>
          </tr>
          <tr>
            <th>ジャンル名</th>
            <th><%= @shop.genre_id %></th>
          </tr>
          <tr>
            <th><%= link_to "編集する", shop_shops_information_edit_path ,class:"btn btn-primary"%></th>
          </tr>
      </table>
    </div>
  </div>
</div>