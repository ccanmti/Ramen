<div class="container">
  <div class="row mb-5">
    <h4 class="col col-md-2 offset-md-2 text-center" style="background-color:#DDD">
      <strong>新規店舗登録</strong>
    </h4>
  </div>
  <div class="row">
    <div class="col col-md-8 offset-md-2">
      <%= form_with model: @shop, url: shop_registration_path do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>
        <div class="field">
          <label class="name">店舗画像　　　　　　　　　　</label>
          <%= f.file_field :image, accept: "image/*", required: true %>
        </div>

        <div class="field">
          <label class="name">店舗名　　　　　　　　　　　</label>
          <%= f.text_field :name, autofocus: true, placeholder:"ラーメン太郎" %>
        </div>

        <div class="field">
          <label class="email">メールアドレス　　　　　　　</label>
          <%= f.email_field :email, placeholder:"sample@example.com" %>
        </div>

        <div class="field">
          <label class="postal_code">郵便番号（ハイフンなし）　　</label>
          <%= f.text_field :postal_code, placeholder:"0000000" %>
        </div>

        <div class="field">
          <label class="address">住所　　　　　　　　　　　　</label>
          <%= f.text_field :address, placeholder:"東京都渋谷区代々木神園町0-0", size: 52 %>
        </div>

        <div class="field">
          <label class="telephone_number">電話番号（ハイフンなし）　　</label>
          <%= f.text_field :telephone_number, placeholder:"0000000000" %>
        </div>

        <div class="field">
          <label>ジャンル名　　　　　　　　　</label>
          <%= f.select :genre_id, options_from_collection_for_select(Genre.all, :id, :name),prompt: "-- 選択してください --", required: true, class: "w-50" %>
        </div>

        <div class="field">
          <label class="password">パスワード（６文字以上）　　</label>
          <%= f.password_field :password, autocomplete: "new-password" %>
        </div>

        <div class="field">
          <label class="password_confirmation">パスワード（確認用）　　　　</label>
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>

        <div class="actions mt-3 col-md-1 offset-md-3">
          <%= f.submit "　　新規登録　　", class:"btn btn-success" %>
        </div>
      <% end %>
        </div>
      </div>
        </div>
      </div>
    </div>
  </div>
</div>