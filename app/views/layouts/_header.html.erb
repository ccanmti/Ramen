<div style="background-color:#040954;">
  <div class="container mb-5">
      <div class="row">
        <div class='col-md-2'>
          <%= link_to "LOGO", root_path %>
        </div>
      <% if customer_signed_in? %>
      <div class= "col-3 d-flex align-items-center">
        <p style ="color: white">ようこそ <%= customer.last_name %><%= customer.first_name %>さん</p>
      </div>
      <div class='col-md-5 offset-md-2 pull-right d-flex align-items-center'>
        <div class="text-right">
          <button type="button" class="btn btn-light"><%= link_to 'マイページ',customers_my_page_path, class: "text-dark" %></button>
          <button type="button" class="btn btn-light"><%= link_to '商品一覧',items_path, class: "text-dark" %></button>
          <button type="button" class="btn btn-light"><%= link_to 'カート',cart_items_path, class: "text-dark" %></button>
          <button type="button" class="btn btn-light"><%= link_to 'ログアウト',destroy_customer_session_path, method: :delete, class: "text-dark" %></button>
        </div>
      </div>
      <% elsif admin_signed_in? %>
      <div class='col-md-6 offset-md-4 pull-right d-flex align-items-center'>
        <div class="text-right">
          <button type="button" class="btn btn-light"><%= link_to '店舗の新規登録',new_shop_registration_path, class: "text-dark" %></button>
          <button type="button" class="btn btn-light"><%= link_to '店舗一覧',admin_shops_path, class: "text-dark" %></button>
          <button type="button" class="btn btn-light"><%= link_to 'ジャンル一覧',admin_genres_path, class: "text-dark" %></button>
          <button type="button" class="btn btn-light"><%= link_to 'ログアウト',destroy_admin_session_path, method: :delete, class: "text-dark" %></button>
        </div>
      </div>
      <% elsif shop_signed_in? %>
      <div class='col-md-6 offset-md-4 pull-right d-flex align-items-center'>
        <div class="text-right">
          <button type="button" class="btn btn-light"><%= link_to 'マイショップ',shop_shops_my_shop_path, class: "text-dark" %></button>
          <button type="button" class="btn btn-light"><%= link_to '商品の新規登録',new_shop_product_path, class: "text-dark" %></button>
          <button type="button" class="btn btn-light"><%= link_to '商品一覧',shop_products_path, class: "text-dark" %></button>
          <button type="button" class="btn btn-light"><%= link_to 'ログアウト',destroy_shop_session_path, method: :delete, class: "text-dark" %></button>
        </div>
      </div>
      <% else %>
      <div class='col-md-6 offset-md-4 pull-right d-flex align-items-center'>
        <div class="text-right">
          <button type="button" class="btn btn-light"><%= link_to 'アバウト',about_path, class: "text-dark" %></button>
          <button type="button" class="btn btn-light"><%= link_to '店舗一覧',shops_path, class: "text-dark" %></button>
          <button type="button" class="btn btn-light"><%= link_to '商品一覧',products_path, class: "text-dark" %></button>
          <button type="button" class="btn btn-light"><%= link_to '新規登録',new_customer_registration_path, class: "text-dark" %></button>
          <button type="button" class="btn btn-light"><%= link_to 'ログイン',new_customer_session_path, class: "text-dark" %></button>
        </div>
      <% end %>
      </div>
    </div>
  </div>
</div>