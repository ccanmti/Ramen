<div class = "container" >
  <div class = "row" >
    <div class = "offset-3 col-12">
      <h2>ログイン</h2>
    </div>
    <div class = "offset-3 col-5">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <table class = "table">
        <tr>
          <th>メールアドレス</th>
          <th><%= f.email_field :email, autofocus: true, autocomplete: "email" %></th>
        </tr>
        <tr>
          <th>パスワード</th>
          <th><%= f.password_field :password, autocomplete: "current-password" %></th>
        </tr>
        <tr>
          <th></th>
          <th><%= f.submit "ログイン", class: "btn btn-success"%></th>
        </tr>
      </table>
      <% end %>
      <strong>ご登録がまだの方は<%= link_to "こちら",new_customer_registration_path %></strong>
    </div>
  </div>
</div>
