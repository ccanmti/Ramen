<div class = "container">
  <div class = "row">
    <div class = "offset-3 col-12">
      <h2>マイページ</h2>
    </div>
    <div class = "offset-3 col-5">
    <% if @customer.image.attached? %>
      <%= image_tag @customer.image, size: "200x200" %>
    <% else %>
      <%= image_tag 'no_image.jpg', size: "200x200" %>
    <% end %>
      <table class = "table">
        <tr>
          <th>氏名(漢字)</th>
          <th><%= @customer.last_name %><%= @customer.first_name %></th>
        <tr>
        <tr>
          <th>氏名(カナ)</th>
          <th><%= @customer.last_name_kana %><%= @customer.first_name_kana %></th>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <th><%= @customer.email %></th>
        </tr>
        <tr>
          <th>郵便番号</th>
          <th><%= @customer.postal_code %></th>
        </tr>
        <tr>
          <th>住所</th>
          <th><%= @customer.address %></th>
        </tr>
        <tr>
          <th>電話番号</th>
          <th><%= @customer.telephone_number %></th>
        </tr>
        <tr>
          <th></th>
          <th><%= link_to "情報を編集",customers_information_edit_path, class:"btn btn-success" %></th>
        </tr>
      </table>
    </div>
    <div class = "col-3">
      <table class = "table">
        <tr>
          <th>〜リンク先一覧〜</th>
        <tr>
        <tr>
          <th><%= link_to "コメント一覧",comments_path %></th>
        </tr>
        <tr>
          <th><%= link_to "お気に入り店舗一覧",favorites_path %>
        </tr>
        <tr>
          <th><%= link_to "注文履歴一覧",orders_path %></th>
        </tr>
        <tr>
          <th><%= link_to "配送先一覧",deliveries_path %></th>
        </tr>
      </table>
    </div>
  </div>
</div>
