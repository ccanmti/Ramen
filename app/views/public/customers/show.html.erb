<div class = "container">
  <div class = "row">
    <div class = "offset-1 col-5">
      <table class = "table">
        <tr>
          <th>氏名(漢字)</th>
          <th><%= @customer.last_name %><%= @customer.first_name %></th>
        <tr>
        <tr>
          <th>氏名(カナ)</th>
          <th><%= @customer.last_name_kana %><%= @customer.first_name_kana %></th>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <th><%= @customer.email %></th>
        </tr>
        <tr>
          <th>郵便番号</th>
          <th><%= @customer.postal_code %></th>
        </tr>
        <tr>
          <th>住所</th>
          <th><%= @customer.address %></th>
        </tr>
        <tr>
          <th>電話番号</th>
          <th><%= @customer.telephone_number %></th>
        </tr>
      </table>
    </div>
    <div class = "col-5">
      <%= link_to "コメント一覧へ", comments_path %>
      <%= link_to "お気に入り店舗一覧へ", favorites_path %>
    </div>
  </div>
</div>
