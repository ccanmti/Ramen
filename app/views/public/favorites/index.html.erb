<div class = "container">
  <div class = "row">
    <div class = "offset-2 col-8">
      <h2>お気に入り店舗一覧</h2>
      <table class = "table">
        <tr>
          <th></th>
          <th>店舗名</th>
          <th>住所</th>
          <th>ジャンル名</th>
        </tr>
        <% @shops.each do |shop| %>
        <tr>
          <td>
            <%= link_to shop_path(shop.shop_id) do %>
              <%= image_tag shop.shop.image, size: "100x100" %>
            <% end %>
          </td>
          <td><%= shop.shop.name %></td>
          <td><%= shop.shop.address %></td>
          <td><%= shop.shop.genre.name %></td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>