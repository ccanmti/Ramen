<div class = "container">
  <div class = "row">
    <div class = "col-12">
      <table class = "table">
        <tr>
          <th>店舗名</th>
          <th>メールアドレス</th>
          <th></th>
        </tr>
        <% @shops.each do |shop| %>
        <tr>
          <td><%= shop.name %></td>
          <td><%= shop.email %></td>
          <td><%= link_to "詳細", admin_shop_path(shop.id), class: "btn btn-success" %></td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>